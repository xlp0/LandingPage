abstract:
  purpose: Summarize content from a file
  description: 'Reads a Markdown (.md) or Python (.py) file and generates a concise
    summary

    using the LLM. The file path is provided in the context.

    '
  inputs:
    file_path:
      type: string
      description: Path to the file to summarize (relative or absolute)
    summary_style:
      type: string
      description: Style of summary (brief, detailed, bullet_points)
      default: brief
  outputs:
    summary:
      type: string
      description: Generated summary of the file content
    metadata:
      type: object
      description: File metadata (name, type, lines)
  preconditions:
  - File exists and is readable
  - File is a .md or .py file
  - Ollama service is running
  postconditions:
  - Returns a text summary
concrete:
  runtime: python
  code_file: file_summarizer_simple.py
  entry_point: summarize_file
  implementation:
    inputs:
      context: dict
  input_type: mcard
  output_type: mcard
  process_type: custom
balanced:
  test_cases:
  - given: "Summarize README.md"
    when:
      operation: summarize
      arguments:
        file_path: README.md
        summary_style: brief
    then:
      result_contains: summary
  expectations:
    performance:
      max_time_ms: 120000
    quality:
      coherence: high
