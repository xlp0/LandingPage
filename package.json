{
  "name": "pkc-landing-page-monorepo",
  "version": "1.0.0",
  "description": "PKC Landing Page & Server - A Personal Knowledge Container web application and server",
  "main": "index.js",
  "bin": {
    "pkc-landing-page": "./bin/pkc-landing.js"
  },
  "files": [
    "public",
    "js",
    "server",
    "routes",
    "bin",
    "index.js",
    "ws-server.js",
    "room-*.mjs",
    "config.js",
    "app-config.json"
  ],
  "directories": {
    "doc": "docs"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "install-browsers": "playwright install",
    "report": "playwright show-report",
    "ws-server": "node ws-server.js",
    "build:mcard": "esbuild scripts/build-mcard-bundle.js --bundle --format=esm --outfile=public/js/vendor/mcard-js.bundle.js --platform=browser",
    "build": "npm run build --workspaces",
    "publish:all": "npm publish --workspaces",
    "version:major": "npm version major --workspaces",
    "version:minor": "npm version minor --workspaces",
    "version:patch": "npm version patch --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xlp0/LandingPage.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/xlp0/LandingPage/issues"
  },
  "homepage": "https://github.com/xlp0/LandingPage#readme",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "esbuild": "^0.27.1"
  },
  "dependencies": {
    "@mlc-ai/web-llm": "^0.2.80",
    "@reduxjs/toolkit": "^1.9.7",
    "animejs": "^4.2.2",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.5.0",
    "core-js": "^3.46.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "katex": "^0.16.25",
    "mathjax": "^4.0.0",
    "mcard-js": "^2.1.23",
    "redux": "^5.0.1",
    "ws": "^8.18.3"
  }
}